<div class="container">
  <div class="card card-body mb-3"><p id="notice"><%= notice %></p></div>
  <div class="d-flex justify-content-between">
    <% if can? :update, @post %>
      <%= link_to 'Edit', edit_post_path(@post), class: 'btnbtn-primary' %>
    <% end %>
    <%= link_to 'Back', posts_path, class: 'btn btn-primary' %>
  </div>
  <h1 class="text-bold text-dark text-left mb-2"><%= @post.title %></h1>
  <div class="text-justify">
    <%= @post.content %>
  </div>
</div>


