<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="text-bold text-center text-dark mb-4">Posts</h1>
      <% if can? :create, @post %>
      <div class="d-flex justify-content-end"><%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %></div>
      <% end %>
      <div class="table-responsive">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th scope="cols">Title</th>
              <th scope="cols">Content</th>
              <th scope="cols" colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= post.content %></td>
                <td>
                    <%= link_to 'Show', post, class: 'btn btn-outline-default' %>
                    <% if can? :update, @post %>
                      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-outline-info' %>
                      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
                    <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



